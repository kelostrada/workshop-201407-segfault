<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<%= form_for :user, url: sessions_path do |f| %>
    <p>
      <%= f.label :email %><br/>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :password %><br/>
      <%= f.password_field :password %>
    </p>

    <p><%= f.submit 'Sign in' %></p>
<% end %>